<%# locals: (resource: nil, tail_css: "font-semibold text-slate-800") %>
<div class="sticky top-0 flex items-center justify-between w-full py-3 bg-white border-b border-slate-100 lg:hidden">
  <button data-action="toggleAttribute#open" data-target="#nav" class="flex items-center w-full gap-x-2.5 text-sm text-slate-700">
    <%= icon "bars-3", class: "size-4 text-slate-800" %>

    <%= tag.ul class: "flex items-center gap-x-1" do %>
      <%= tag.li @resource.section.name, class: "text-slate-600" %>

      <%= icon "chevron-right", class: "size-4 text-slate-500" %>

      <%= tag.li @resource.title, class: tail_css %>
    <% end if @resource.present? %>

    <%= tag.p "Documentation", class: tail_css if @resource.blank? %>
  </button>

  <button data-action="toggleClass#hidden" data-target="#toc" class="flex items-center shrink-0 gap-x-2 px-3 py-1 text-xs text-slate-800 font-medium bg-slate-50 ring ring-offset-0 ring-slate-200 rounded-md transition active:scale-98">
    <%= icon "bars-3-center-left", class: "size-3 text-xs text-slate-600" %>

    On this page
  </button>
</div>
