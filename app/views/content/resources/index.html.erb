<article class="mt-4 px-2 mt:mt-6 lg:mt-5">
  <h1 class="text-2xl font-bold text-slate-800 tracking-tight sm:text-3xl">
    Library
  </h1>

  <p class="mt-2 max-w-prose text-lg text-slate-800">
    A growing collection of snippets, templates and UI components for Perron.
  </p>

  <ul class="grid gap-6 mt-8 mb-12">
    <% @resources.each do |type, resources| %>
      <li>
        <%= tag.h2 type.name, id: type.slug, class: "ml-2 text-lg font-bold text-slate-800" %>
        <%= tag.p type.description, class: "ml-2 text-base text-slate-600" %>

        <ul class="grid gap-4 mt-3.5">
          <% resources.sort_by(&:category).group_by(&:category).each do |category, resources| %>
            <li>
              <%= tag.h3 category.to_s.humanize, class: "ml-2 text-sm font-semibold text-slate-800" %>

              <ul class="grid grid-cols-12 gap-4 mt-0.75 px-2">
                <%= render resources.sort_by(&:order) %>
              </ul>
            </li>
          <% end %>
        </ul>
      </li>
    <% end %>
  </ul>
</article>
